echo "🔍 Checking code format..."
npm run format:check || exit 1

echo "🔍 Checking code format with prettier..."
npm run format:prettier-format || exit 1

echo "🔍 Running linter..."
npm run lint || exit 1

echo "🔍 Checking types..."
npm run typecheck || exit 1

echo "🔍 Running tests..."
npm run test || exit 1

echo "✅ All checks passed successfully!"

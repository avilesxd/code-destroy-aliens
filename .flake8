[flake8]
max-line-length = 125
extend-ignore = E203
exclude =
    .git,
    __pycache__,
    build,
    dist,
    .venv,
    venv,
    env,
    .pytest_cache,
    .tox,
    *.pyc,
    *.egg-info
per-file-ignores =
    __init__.py:F401
    test_*.py: F401, F841
    tests/*.py: F401, F841
    */tests/*.py: F401, F841
max-complexity = 10
select = E,F,W,C
ignore =
    E402,
    E731,
    E712 